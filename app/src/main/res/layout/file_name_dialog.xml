<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:padding="15dp">

    <ImageButton
        android:id="@+id/iv_file_name_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ico_close"
        android:padding="15dp"
        android:layout_gravity="end"
        android:backgroundTint="@color/colorRed"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Enter file name"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:textColor="@color/colorBackBlue"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Enter File Name"
        android:textColorHint="@color/colorGray"
        android:paddingStart="15dp"
        android:background="@drawable/background"
        android:textColor="@color/colorBlack"
        android:layout_margin="10dp"
        android:id="@+id/et_file_name"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_file_name_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Cancel"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorBackBlue"
            android:layout_weight="1"
            android:layout_marginRight="8dp"/>


        <Button
            android:id="@+id/bt_file_name_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="8dp"
            android:text="Save"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorBackBlue"
            android:layout_weight="1"/>


    </LinearLayout>




</LinearLayout>